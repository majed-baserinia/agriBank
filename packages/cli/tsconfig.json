{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["ESNext"],
		"moduleResolution": "Bundler",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"target": "ES2022",
		"strict": true,
		"rootDir": ".",
		"paths": {
			"$/*": ["./src/*"]
		}
	},
	"include": ["**/*"],
	"exclude": ["node_modules", "dist", "./eslint.config.mjs"]
}
