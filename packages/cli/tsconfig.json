{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
		"lib": ["ES2022"],
		"moduleResolution": "Bundler",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"target": "ES2022",
		"strict": true,
		"rootDir": ".",
		"paths": {
			"$/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules", "dist", ".generated", "./eslint.config.mjs", "./vite.config.ts"]
}
