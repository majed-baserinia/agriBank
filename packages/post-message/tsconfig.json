{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": true,

		"moduleResolution": "Bundler",
		"baseUrl": "." /* Base directory to resolve non-absolute module names. */,

		"noEmit": true,
		"jsx": "react-jsx",
		"paths": {
			"$lib/*": ["./lib/*"]
		}
	},
	"include": ["./lib", "./index.ts"],
	"exclude": ["node_modules", "dist"]
}
