{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"baseUrl": ".",

		"allowJs": true,
		"checkJs": true,

		"jsx": "react-jsx",
		"paths": {
			"$/*": ["./lib/*"]
		}
	},
	"include": ["./lib", "./index.ts"],
	"exclude": ["node_modules", "dist"]
}
